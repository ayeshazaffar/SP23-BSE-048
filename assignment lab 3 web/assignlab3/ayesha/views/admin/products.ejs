<h3>Products</h3>

<!-- Products Table -->
<table class="table table-bordered table-hover table-striped">
  <thead class="thead-dark">
    <tr>
      <th>Brand Name</th>
      <th>Description</th>
      <th>Picture</th>
      <th>Actions</th>
    </tr>
  </thead>
  
  <tbody>
    <% for (let index = 0; index < products.length; index++) { %>
      <tr>
        <td><%= products[index].brandname %></td>
        <td><%= products[index].description %></td>
        <td>
          <img src="/<%= products[index].picture %>" class="img-thumbnail" width="100px" alt="<%= products[index].brandname %> Picture" />
        </td>
        <td>
          <a href="/products/edit/<%= products[index]._id %>" class="btn btn-warning btn-sm">Edit</a>
          <a href="/products/delete/<%= products[index]._id %>" class="btn btn-danger btn-sm">Delete</a>
        </td>
      </tr>
    <% } %>
  </tbody>
</table>

<div class="mt-3">
  <a href="/products/create" class="btn btn-primary">Create New Product</a>
</div>
